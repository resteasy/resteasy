<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 5.0" />
    <group qualifier="integration-tests" default="true">
        <container qualifier="jbossas-plaintext" default="true">
            <configuration>
                <property name="jbossHome">${jboss.home}</property>
                <property name="jbossArguments">${securityManagerArg}</property>
                <property name="serverConfig">standalone.xml</property>
                <property name="javaVmArguments">${debugJvmArgs} -server -Xms256m -Xmx1G
                -Djboss.bind.address=${node} -Djboss.bind.address.management=${node}
                -Dnode=${node} -Dipv6=${ipv6} ${additionalJvmArgs} ${ipv6ArquillianSettings} ${jacoco.agent}
                -Djboss.socket.binding.port-offset=${container.offset.plaintext}
                -Djboss.server.base.dir=${container.base.dir.plaintext}
                </property>
                <property name="managementAddress">${node}</property>
                <property name="managementPort">${container.management.port.plaintext}</property>
            </configuration>
        </container>
        <container qualifier="jbossas-ssl-oneway">
            <configuration>
                <property name="jbossHome">${jboss.home}</property>
                <property name="jbossArguments">${securityManagerArg}</property>
                <property name="serverConfig">standalone.xml</property>
                <property name="javaVmArguments">-server -Xms256m -Xmx1G
                -Djboss.bind.address=${node} -Djboss.bind.address.management=${node}
                -Dnode=${node} -Dipv6=${ipv6} ${additionalJvmArgs} ${ipv6ArquillianSettings} ${jacoco.agent}
                -Djboss.socket.binding.port-offset=${container.offset.ssl.oneway} -Dresteasy.allowGzip=true
                -Djboss.server.base.dir=${container.base.dir.ssl.oneway}
                </property>
                <property name="managementAddress">${node}</property>
                <property name="managementPort">${container.management.port.ssl.oneway}</property>
            </configuration>
        </container>
        <container qualifier="jbossas-ssl-twoway">
            <configuration>
                <property name="jbossHome">${jboss.home}</property>
                <property name="jbossArguments">${securityManagerArg}</property>
                <property name="serverConfig">standalone.xml</property>
                <property name="javaVmArguments">-server -Xms256m -Xmx1G
                -Djboss.bind.address=${node} -Djboss.bind.address.management=${node}
                -Dnode=${node} -Dipv6=${ipv6} ${additionalJvmArgs} ${ipv6ArquillianSettings} ${jacoco.agent}
                -Djboss.socket.binding.port-offset=${container.offset.ssl.twoway}
                -Djboss.server.base.dir=${container.base.dir.ssl.twoway}
                </property>
                <property name="managementAddress">${node}</property>
                <property name="managementPort">${container.management.port.ssl.twoway}</property>
            </configuration>
        </container>
    </group>
    <extension qualifier="systemproperties">
        <property name="prefix">org.jboss.resteasy.</property>
    </extension>
</arquillian>
