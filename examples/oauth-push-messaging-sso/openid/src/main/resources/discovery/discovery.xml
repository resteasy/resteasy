<?xml version="1.0" encoding="UTF-8"?>
<xrds:XRDS
  xmlns:xrds="xri://$xrds"
  xmlns:openid="http://openid.net/xmlns/1.0"
  xmlns="xri://$xrd*($v*2.0)">
  <XRD>
    <Service priority="0">
      <Type>http://specs.openid.net/auth/2.0/signon</Type>
      <URI>http://localhost:${webapp.port.replace}/provider-servlet/provider</URI>
    </Service>
    <Service priority="1">
      <Type>http://specs.openid.net/auth/2.0/server</Type>
      <URI>http://localhost:${webapp.port.replace}/provider-servlet/provider</URI>
    </Service>
  </XRD>
</xrds:XRDS>
